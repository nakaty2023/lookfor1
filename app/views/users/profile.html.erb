<% provide(:title, 'プロフィール') %>
<div class="profile-wrapper p-4">
  <h1 class="fs-3 fw-bold">プロフィール</h1>
  <div class="row d-flex justify-content-center">
    <div class="row d-flex justify-content-center">
      <div class="col-lg-6 col-md-8 col-sm-10 col-12 py-4">
        <%= image_tag @user.display_image, alt: "User image", class: "user-image rounded-circle me-4", width: 80, height: 80 %>
        <%= link_to 'プロフィールを編集', edit_user_registration_path, class: 'btn btn-outline-primary btn-sm' %>
      </div>
    </div>
    <ul class="list-group col-lg-6 col-md-8 col-sm-10 col-12">
      <li class="list-group-item d-flex justify-content-between align-items-start px-4">
        <div class="ms-2 me-auto">
          <div class="fw-bold">ユーザー名</div>
          <%= @user.name %>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-start px-4">
        <div class="ms-2 me-auto">
          <div class="fw-bold">E-mail</div>
          <%= @user.email %>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-start px-4">
        <div class="ms-2 me-auto">
          <div class="fw-bold">パスワード</div>
          *************
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-start px-4">
        <div class="ms-2 me-auto">
          <div class="fw-bold">年齢</div>
          <%= @user.age.present? ? @user.age : '未登録' %>
        </div>
      </li>
      <li class="list-group-item d-flex justify-content-between align-items-start px-4">
        <div class="ms-2 me-auto">
          <div class="fw-bold">性別</div>
          <%= @user.gender.present? ? @user.gender : '未登録' %>
        </div>
      </li>
    </ul>
  </div>
</div>

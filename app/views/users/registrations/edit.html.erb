<% provide(:title, 'プロフィール変更') %>
<div class="user-registrations-wrapper p-4">
  <h1 class="fs-3 fw-bold">プロフィール変更</h1>
  <div class="row">
    <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
      <%= form_with model: resource, as: resource_name, url: registration_path(resource_name), method: :put, local: true do |f| %>
        <%= render "shared/error_messages", resource: resource %>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= f.label :image, class: "col-form-label" %>
          </div>
          <div class="col-sm-8 text-center">
            <%= image_tag @user.display_image, alt: "User image", class: "rounded-circle mb-3", width: 80, height: 80 %><br>
            <%= f.file_field :image, accept: "image/png,image/jpeg,image/jpg,image/gif" %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= f.label :name, class: "col-form-label" %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :name, autocomplete: "name", class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= f.label :email, class: "col-form-label" %>
          </div>
          <div class="col-sm-8">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div><%= t('users.registrations.edit.currently_waiting_confirmation_for_email') %>: <%= resource.unconfirmed_email %></div>
          <% end %>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= f.label :age, class: "col-form-label" %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :age, class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= f.label :gender, class: "col-form-label" %>
          </div>
          <div class="col-sm-8">
            <%= f.select :gender, User.enum_options_for_select(:gender), { include_blank: '--選択してください--' }, class: "form-select" %>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-sm-4">
            <%= f.label :password, class: "user-registrations-form-label col-form-label" %><br>
            <% if @minimum_password_length %>
              <span>※<%= @minimum_password_length %> <%= t('users.registrations.characters_minimum') %></span>
            <% end %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password, autocomplete: "new-password", class: "user-registrations-form-control form-control" %>
            <span>※<%= t('users.registrations.edit.leave_blank_if_you_don_t_want_to_change_it') %></span>
          </div>
        </div>
        <div class="row mb-4">
          <div class="col-sm-4">
            <%= f.label :password_confirmation, class: "user-registrations-form-label col-form-label" %><br>
            <% if @minimum_password_length %>
              <span>※<%= @minimum_password_length %> <%= t('users.registrations.characters_minimum') %></span>
            <% end %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "user-registrations-form-control form-control" %>
            <span>※<%= t('users.registrations.edit.leave_blank_if_you_don_t_want_to_change_it') %></span>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-sm-4">
            <%= f.label :current_password, class: "col-form-label" %>
          </div>
          <div class="col-sm-8">
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
            <span>※<%= t('users.registrations.edit.we_need_your_current_password_to_confirm_your_changes') %></span>
          </div>
        </div>
        <div class="actions row mb-3">
          <%= f.submit t('users.registrations.edit.update'), class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="text-end">
        <%= link_to t('users.registrations.edit.back'), :back %>
      </div>
    </div>
  </div>
